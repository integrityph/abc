---
import BaseLayout from "@/layouts/BaseLayout.astro";
import SolutionCard from "@/components/SolutionCard.astro";

import { getCollection } from "astro:content";

const featuredSolutions = await getCollection("solutions");
---
<BaseLayout>
  <section id="solutions-hero" class="s-works page-hero target-section">
    <div class="row section-header work-showcase-logo" data-aos="fade-up">
      <div class="col-full">
          <h3 data-num="01" class="subhead">Featured Solutions</h3>
          <h1 class="display-1">
              Explore our latest business solutions.
          </h1>

          <ul class="solution-logo-list">
              <li tooltip = "Luks Lofts Hotel" flow = "down">
                  <img src="/static/images/lukslofts-icon-default.png" alt="Luks Lofts Hotel">
              </li>
              <li tooltip="DigiButler" flow="down">
                  <img src="/static/images/digibutler-icon-default.png" alt="DigiButler">
              </li>
              <li tooltip="Zumumu" flow="down">
                  <img src="/static/images/zumumu-icon-default.png" alt="Zumumu">
              </li>
              <li tooltip="Share Cafe" flow="down">
                  <img src="/static/images/share-icon-default-box.png" alt="Share Cafe">
              </li>
              <li tooltip="Share Events" flow="down">
                  <img src="/static/images/share-icon-default.png" alt="Share Events">
              </li>
              <li tooltip="IntegraNet" flow="down">
                  <img src="/static/images/integranet-icon-default.png" alt="IntegraNet">
              </li>
              <li tooltip="IntegrityBPO" flow="down">
                  <img src="/static/images/bpo-icon-default.png" alt="IntegrityBPO">
              </li>
              <li tooltip="IntegrityPBX" flow="down">
                  <img src="/static/images/pbx-icon-default.png" alt="IntegrityPBX">
              </li>
              <li tooltip="IntegrityPCI" flow="down">
                  <img src="/static/images/pci-icon-default.png" alt="IntegrityPCI">
              </li>
              <li tooltip="HRMS" flow="down">
                  <img src="/static/images/hrms-icon-default.png" alt="HRMS">
              </li>
          </ul>
      </div>
    </div>

    <div class="row section-header block-1-3 block-m-1-2 block-tab-1-2 block-mob-full work-showcase">
      <div>
        {
          featuredSolutions.map(solution => (
            <div class="col-block showcase-solution" data-aos="fade-up" data-aos-delay="100">
              <SolutionCard slug={solution.slug} />
            </div>
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>