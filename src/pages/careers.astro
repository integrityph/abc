---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Gallery from "@/components/Gallery.astro";
import ContactSection from "@/components/ContactSection.astro";
import { getCollection } from "astro:content";

const careers = await getCollection('careers')
---

<BaseLayout>
  <section id="works" class="s-works page-hero target-section">
    <div class="row section-header" data-aos="fade-up">
      <div class="col-full md-full tab-full mob-full">
        <h3 data-num="01" class="subhead">Careers</h3>
        <h1 class="display-1">Join our growing team</h1>
        <p class="lead">
          We are looking for motivated individuals. <br /> Work with amazing people
          to build and shape great brands.
        </p>
      </div>
    </div>
  </section>

  <section id="careers-parallax" class="s-stats parallax-work">
    <div
      class="row stats-block block-1-4 block-m-1-2 block-mob-full"
      data-aos="fade-up">
    </div>
  </section>

  { careers.length > 0 && (
    <section class="career-showcase block-1-4 block-m-1-3 block-tab-1-2">
      <div class="row section-header" data-aos="fade-up">
        <div class="col-full">
          <h1 class="display-1">Current vacancies</h1>
        </div>
      </div>

      {careers.sort((a,b) => a.data.order - b.data.order).map((career, index) => (
        <div
        id={`career-card-${String(index).padStart(2, "0")}`}
        class="col-six md-six tab-full career-card"
        data-aos="fade-up">
        <a href="/application">
          <img class="career-aspect-ratio" src={career.data.image.src} alt={career.data.image.alt} />
        </a>
      </div>
      ))}
    </section>)
  }

  <section id="team-players" class="career-statement page-hero target-section">
    <div class="row section-header" data-aos="fade-up">
      <div class="col-full">
        <h3 data-num="02" class="subhead">A TEAM OF A-PLAYERS</h3>
        <h1 class="display-1 display-1--light">
          Do great work alongside other talented, passionate, and hungry
          creatives.
        </h1>
      </div>
    </div>
  </section>

  <section id="workspace" class="s-works target-section">
    <div class="row section-header" data-aos="fade-up">
      <div class="col-full">
        <h3 data-num="03" class="subhead">Workspace</h3>
        <h1 class="display-1">Our people</h1>
        <p class="lead">
          A talented team of individuals, doing what we love for brands that get
          it.
        </p>
      </div>
    </div>

    <div class="portfolio block-1-4 block-m-1-3 block-tab-1-2 collapse">
      <Gallery
        title="IntegrityNet Neoworkers"
        caption="IntegrityNet Neoworkers"
        src="/static/images/JLB_2552.jpg"
        alt="workspace-with-people"
      />

      <Gallery
        title="IntegrityNet Neoworkers"
        caption="IntegrityNet Neoworkers"
        src="/static/images/CTV_4550.jpg"
        alt="workspace-with-people"
      />

      <Gallery
        title="IntegrityNet Neoworkers"
        caption="IntegrityNet Neoworkers"
        src="/static/images/JLB_2554.jpg"
        alt="workspace-with-people"
      />

      <Gallery
        title="IntegrityNet Neoworkers"
        caption="IntegrityNet Neoworkers"
        src="/static/images/CTV_4536.jpg"
        alt="workspace-with-people"
      />

      <Gallery
        title="IntegrityNet Neoworkers"
        caption="IntegrityNet Neoworkers"
        src="/static/images/CTV_4599.jpg"
        alt="workspace-with-people"
      />

      <Gallery
        title="IntegrityNet Neoworkers"
        caption="IntegrityNet Neoworkers"
        src="/static/images/JLB_2665.jpg"
        alt="workspace-with-people"
      />

      <Gallery
        title="IntegrityNet Neoworkers"
        caption="IntegrityNet Neoworkers"
        src="/static/images/JLB_2673.jpg"
        alt="workspace-with-people"
      />

      <Gallery
        title="IntegrityNet Neoworkers"
        caption="IntegrityNet Neoworkers"
        src="/static/images/JLB_2653.jpg"
        alt="workspace-with-people"
      />
    </div>
  </section>

  <ContactSection
    order="4"
    subhead="Get in Touch"
    header="Talk to us. Let's work together and start something great."
    btnUrl="https://integritynet.ph/contact.html"
    btnName="Say Hello"
  />
</BaseLayout>
