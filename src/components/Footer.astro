---
const year = new Date().getFullYear();
const props = Astro.props;
---

<section id="contact" class="s-contact target-section">
  <div class="row section-header" data-aos="fade-up">
    <div class="col-full">
      <h3 data-num={props.order} class="subhead">Get In Touch</h3>
      <h1 class="display-1 display-1--light">
        {props.text}
        {
          props.email && (
            <a href="mailto:sales@integritynet.biz">{props.email}</a>
          )
        }
      </h1>
      {
        props.subtext && (
          <p class="lead lead-light">{props.subtext}</p>
        )
      }
      {
        props.btnName && (
          <p class={`lead ${props.altBtn ? "lead-light" : null}`}>
            <a
              href="contact.html"
              class={`${props.altBtn ? "btn inet-btn-main-invert-light" : "btn btn--primary"}`}>
              {props.btnName}
            </a>
          </p>
        )
      }
    </div>
  </div>

  <div class="row contact-infos">
    <div
      class="col-five md-six tab-1-2 mob-full contact-logo"
      data-aos="fade-up">
      <img
        src="/static/images/integritynet-icon-default.png"
        alt="inet-logo"
        class="inet-logo-contact"
      />
      <h1>INTEGRITYNET</h1>
      <p>
        Passion for Excellence and <br /> Dedication to Rendering Quality Service.
      </p>
    </div>

    <div
      class="col-two md-six tab-1-2 mob-full contact-pages"
      data-aos="fade-up">
      <h4>Menu</h4>

      <ul class="contact-list">
        <li><a href="index.html">Home</a></li>
        <li><a href="solutions.html">Solutions</a></li>
        <li><a href="services.html">Services</a></li>
        <li><a href="about.html">About</a></li>
        <li><a href="contact.html">Contact</a></li>
      </ul>
    </div>

    <div
      class="col-two md-six tab-1-2 mob-full contact-company"
      data-aos="fade-up">
      <h4>Company</h4>

      <ul class="contact-list">
        <li><a href="careers.html">Careers</a></li>
        <li><a href="insights.html">Insights</a></li>
        <li><a href="gallery.html">Gallery</a></li>
        <li><a href="case-studies.html">Case Studies</a></li>
      </ul>
    </div>

    <div
      class="col-three md-six tab-1-2 mob-full contact-details"
      data-aos="fade-up">
      <h4>Contact Us</h4>

      <ul class="contact-list">
        <li>
          <a href="mailto:sales@integritynet.biz">sales@integritynet.biz</a>
        </li>
        <li><a href="tel:63 917 548 6519">+63 917 548 6519</a></li>
        <li><a href="tel:63 932 846 5554">+63 998 590 8178</a></li>
        <li><a href="tel:1 877 876 9992">+1 877 876 9992</a></li>
        <li><a href="tel:1 713 583 5557">+1 713 583 5557</a></li>
      </ul>
    </div>
  </div>

  <div class="row contact-mid">
    <div
      class="col-five md-five tab-1-2 mob-full contact-social"
      data-aos="fade-up">
      <ul class="contact-social-list">
        <li>
          <a href="https://www.facebook.com/integritynet.biz" target="_blank">
            <div class="link">
              <svg width="9" height="17">
                <path
                  d="M6 6V4a.942.942 0 0 1 1-1h1L7.88.012H5.63C3.76.012 2 1.242 2 3v3H0v3h2v8h4V9h2l1.01-3.153z"
                  fill="#ffffff"
                  fill-rule="evenodd"></path>
              </svg>
            </div>
          </a>
        </li>

        <li>
          <a href="https://twitter.com/integritynetbpo" target="_blank">
