---
const { pathname }  = Astro.url;
---

  <header class="s-header">
      <div class="row">
          <div class="header-logo">
              <a class="site-logo" href="/">
                  <img src="/static/images/integritynet-logo-red.png" alt="Homepage" class="image-logo">
              </a>
          </div>

          <nav class="header-nav-wrap">
              <ul class="header-nav">
                  <li class={`${pathname === "/" ? "active": ""}`}><a href="/">Home</a></li>
                  <li class={`${pathname.startsWith("/solutions") ? "active": ""}`}><a href="/solutions">Solutions</a></li>
                  <li class={`${pathname.startsWith("/services") ? "active": ""}`}><a href="/services">Services</a></li>
                  <li class={`${pathname.startsWith("/about") ? "active": ""}`}><a href="/about">About</a></li>
                  <li class={`${pathname.startsWith("/contact") ? "active": ""}`}><a href="/contact">Contact</a></li>
              </ul>
          </nav>

          <a class="header-menu-toggle" href="#0">
              <span class="header-menu-icon"></span>
          </a>
      </div>
  </header>